@import '_normalize.styl'
@import '_type.styl'

body
  background offwhite
  margin 0

.dashboard
    width 100%
    height 100%
    overflow hidden
    position absolute
    top 0
    left 0
  .menu
    float left
    width 230px
    height 100%
    display flex
    flex-direction column

    .flag 
      height 120px
      width 0
      border-left 230px solid #3371ff
      border-right 0px solid #3371ff
      border-bottom 30px solid transparent  
    .title
      position absolute
      margin 50px 0 0 80px
      a
        text-decoration none
        color #ffffff
    .profile 
      width 100%
      height 100px
      text-align center
      display flex
      flex-direction column
      margin-top 20px
      img
        width 60px
        height 60px
        border-radius 50%
        margin auto
      span
        color grey
    .submenu
      margin-top 40px
      display flex
      flex-direction column
      a
        text-decoration none 
        color #000
      .jump
        margin auto
        width 50%
        padding 8px
  .content
    background #F1F6F7
    width calc(100% - 230px)
    height 100%
    float right 

    h1 
      margin 50px 0 20px 0

    .photos
      height 100%
      text-align center
      overflow scroll
    .single-photo
      width 20%
      height 150px
      float right
      margin 20px 0

    .search 
      height 100%
      text-align center
      overflow scroll
      .search-input
        width 700px
        height 40px
        margin auto
        justify-content space-around
        display flex
        input 
          width 450px
          height 40px
        button
          width 100px
          border-radius 5px
      .search-result
        text-align left 
        width 500px
        min-height 150px
        height auto
        margin 50px auto
        background #3371ff
        color #fff
        padding 10px
    .animations
      height 100%
      text-align center
      overflow scroll
      .buttons
        button
          width 150px
          height 150px
          border-radius 5px
          margin 5px 20px
        .grow
          transition-duration 0.4s
          -webkit-transition-duration 0.4s
          transform: translateZ(0)
          -webkit-transform translateZ(0)
          transition-property transform 
          -webkit-transition-property: transform
          background-color #1abc9c
          color #fff
        
        .grow:hover 
          transform scale(1.15)
          -webkit-transform scale(1.15)

        .shrink
          display inline-block
          transition-duration 0.4s
          -webkit-transition-duration 0.4s
          transition-property transform  
          -webkit-transition-property: transform;
          transform translateZ(0)
          -webkit-transform translateZ(0)
          background #3371ff
          color #fff

        .shrink:hover
          transform scale(0.85)
          -webkit-transform scale(0.85)

        .change-color
          transition 2s all
        .change-color:hover
          color #fff
          background #e74c3c
        
      .wrapper
        display flex
        justify-content center
        align-items center
        height 200px
        .ball
          width 40px
          height 40px
          border-radius 50%
          display inline-block
          position absolute
          animation rotate 1s linear infinite
          background #EC5C63

        @keyframes rotate
          from
            transform rotate(0deg) translate(50px)
          to
            transform rotate(360deg) translate(50px)
      .line
        position relative
        width 100%
        margin 0 auto
        border-right: 2px solid #EC5C63
        color #EC5C63
        font-size 30px
        text-align center
        white-space nowrap
        overflow hidden
      .anim-typewriter
        animation typewriter 4s steps(44) 1s 1 normal both, blinkTextCursor 500ms steps(44) infinite normal
      @keyframes typewriter
        from
          width 0
        to
          width 50%
      @keyframes blinkTextCursor
        from
          border-right-color #EC5C63
        to
          border-right-color transparent
        

